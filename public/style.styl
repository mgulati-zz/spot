global-reset();

html
  height 100%

body
  height 100%
  margin 0
  padding 0

#mapCanvas
  height 100%
  z-index 1

#obfuscateMap
  position absolute
  height 100%
  width 100%
  background-color orange
  opacity 0.2
  z-index 2

#showLocation
  position absolute
  font-family "Segoe UI Light","Helvetica Neue","Segoe UI","Segoe WP", "sans-serif";
  font-size 100px
  padding 100px 100px
  z-index 3
  display none

  p.step
    padding-bottom: 20px

  p.small
    font-size 60px

