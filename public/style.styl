#timeline
  position: absolute;
  min-height: 7%;
  width: 100%;
  bottom: 0;
  opacity: .7;
  background-color: #fff;
  z-index: 2;
  padding-top: 0.5%;

  .progress
    position: relative;
    border-radius: 10px;
    height: 3px;
    margin-bottom: 5px;
    display: block;
    margin-right: 6%;
    margin-left: auto;

    &::before
      content: attr(time);
      width: 35px;
      height: 24px;
      margin-left: -15px;
      border-radius: 50px;
      z-index: 3;
      background-color: inherit;
      display: block;
      font-size: x-small;
      text-align: center;
      font-family: "Segoe UI Light","Helvetica Neue","Segoe UI","Segoe WP","sans-serif";
      padding-top: 11px;
      color: white;

    &:last-child
      margin-bottom: 20px

  #marker
    background-image: url("http://www.clker.com/cliparts/b/7/6/5/1308001441853739087google%20maps%20pin.svg");
    background-size: cover;
    position: absolute;
    height: 75%;
    right: 0;
    z-index: 3;
    width: 5%;
    top: 5%;
